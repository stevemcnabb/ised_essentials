{
    "name": "steve.mcnabb/ised_essentials",
    "description": "WARNING: EXPERIMENTAL! Essential code for ISED developers",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Steve McNabb",
            "email": "steve.mcnabb@canada.ca"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "drupalwxt/site-wxt": "^8.x-dev"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        },
        {
            "type": "composer",
            "url": "https://drupalwxt.github.io/composer-extdeps/"
        },
        {
            "type": "vcs",
            "url": "https://github.com/ossobuffo/drupal-console-extend-plugin.git"
        }
    ],
    "extra": {
        "installer-paths": {
            "html/core": [
                "type:drupal-core"
            ],
            "html/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "html/profiles/custom/{$name}": [
                "type:drupal-custom-profile"
            ],
            "html/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "html/modules/custom/{$name}": [
                "type:drupal-custom-module"
            ],
            "html/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "html/themes/custom/{$name}": [
                "type:drupal-custom-theme"
            ],
            "html/libraries/{$name}": [
                "type:drupal-library"
            ],
            "drush/Commands/{$name}": [
                "type:drupal-drush"
            ]
        },
        "drupal-scaffold": {
            "locations": {
                "web-root": "./html"
            }
        }
    },
   
    "scripts": {
        "nuke-files": [
            "rm -rf vendor composer.lock"
        ],
        "nuke-soft": [
            "@composer nuke-files",
            "@composer install --ansi -vvv"
        ],
        "nuke": [
            "@composer nuke-files",
            "@composer clearcache --ansi",
            "@composer install --ansi"
        ]
    }
}
