{
    "name": "steve.mcnabb/ised_essentials",
    "description": "WARNING:  EXPERIMENTAL! Essential code for ISED developers",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Steve McNabb",
            "email": "steve.mcnabb@canada.ca"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "drupalwxt/site-wxt": "^4.0.0-rc3",
        "doctrine/annotations": "^1.4"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        },
        {
            "type": "composer",
            "url": "https://drupalwxt.github.io/composer-extdeps/"
        },
        {
            "type": "vcs",
            "url": "https://github.com/ossobuffo/drupal-console-extend-plugin.git"
        }
    ],
    "extra": {
        "installer-paths": {
            "docroot/core": [
                "type:drupal-core"
            ],
            "docroot/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "docroot/profiles/custom/{$name}": [
                "type:drupal-custom-profile"
            ],
            "docroot/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "docroot/modules/custom/{$name}": [
                "type:drupal-custom-module"
            ],
            "docroot/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "docroot/themes/custom/{$name}": [
                "type:drupal-custom-theme"
            ],
            "docroot/libraries/{$name}": [
                "type:drupal-library"
            ],
            "drush/Commands/{$name}": [
                "type:drupal-drush"
            ]
        }
    },
    "scripts": {
        "nuke-files": [
            "rm -rf vendor composer.lock"
        ],
        "nuke-soft": [
            "@composer nuke-files",
            "@composer install --ansi -vvv"
        ],
        "nuke": [
            "@composer nuke-files",
            "@composer clearcache --ansi",
            "@composer install --ansi"
        ]
    }
}
